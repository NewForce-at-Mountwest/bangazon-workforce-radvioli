            <h5 class="col-sm-2">
                @Html.DisplayNameFor(model => model.DepartmentEmployees)
            </h5>

        
        </div>
            @foreach (var item in Model.DepartmentEmployees)
            {
                <div>
                    <div>
                        @Html.DisplayFor(modelItem => item.firstName)
                    
